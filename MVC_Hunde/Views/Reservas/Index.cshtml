<!DOCTYPE html>
<html>
<body>
    <h3>LISTADO DE CONSULTAS CON FILTRO - VETERINARIA HUNDE</h3>
    @using (Html.BeginForm("Filtrar", "Reservas"))
    {
        <table cellpading="2" cellspacing="2" border="1" width="1100">
            <tr>
                <th>Seleccione tipo de criterio</th>
            </tr>
            <tr>
                <td>
                    <input type="radio" name="condicion" value="Todas" checked="true" />
                    <span>Todas</span>
                </td>
                @*<td>
                    <input type="radio" name="condicion" value="PorMascota" />
                    <span>Por Mascota</span>
                </td>
                <td>
                    <input type="radio" name="condicion" value="PorFecha" />
                    <span>Por Fecha</span>
                </td>*@
                <td>
                    <input type="radio" name="condicion" value="PorEstado" />
                    <span>Por Estado</span>
                </td>

            </tr>
            <tr>
                @*<td>
                    <input type="text" name="criterio" />
                </td>*@
                <td>
                    @Html.DropDownList("cboEstado", (IEnumerable<SelectListItem>)ViewBag.estados)
                </td>
                <td>
                    <input type="submit" name="Buscar" />
                </td>
                @*<td></td>
                <td></td>*@
            </tr>
        </table>
    }
    <br />
    <br />


    <table cellpading="2" cellspacing="2" border="1" width="1100">
        <tr>
            <th>Codigo</th>
            <th>Fecha Reserva</th>
            <th>Fecha Solicitada</th>
            <th>Hora Solicitada</th>
            <th>Estado</th>
            <th>Cod. Cliente</th>

        </tr>

        @foreach (var cons in ViewBag.listarCitas)
        {
            <tr>
                <th>@cons.cod_cita</th>
                <th>@cons.fec_reserva</th>
                <th>@cons.fec_cita</th>
                <th>@cons.hor_cita</th>
                <th>@cons.est_cita</th>
                <th>@cons.cod_cli</th>
            </tr>
        }
    </table>
</body>
</html>
